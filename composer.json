{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 8 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "civicrm/civicrm-asset-plugin": "~1.1",
        "civicrm/civicrm-core": "5.58.1",
        "civicrm/civicrm-drupal-8": "5.58.1",
        "civicrm/civicrm-packages": "5.58.1",
        "composer/installers": "^1.2",
        "drupal/admin_toolbar": "^2.4",
        "drupal/antibot": "^1.4",
        "drupal/asset_injector": "^2.7",
        "drupal/autologout": "^1.3",
        "drupal/better_exposed_filters": "^5.0@beta",
        "drupal/blazy": "^2.1",
        "drupal/blazy_ui": "^2.1",
        "drupal/calendar_link": "^2.0",
        "drupal/charts": "^3.2",
        "drupal/codesnippet": "^1.7",
        "drupal/colorbutton": "^1.2",
        "drupal/content_access": "^1.0@alpha",
        "drupal/core-composer-scaffold": "^9.5",
        "drupal/core-project-message": "^9.5",
        "drupal/core-recommended": "^9.5",
        "drupal/ctools": "^3.4",
        "drupal/editor_advanced_image": "^2.0@beta",
        "drupal/fontawesome": "^2.17",
        "drupal/fontawesome_menu_icons": "^1.8",
        "drupal/form_options_attributes": "^1.2",
        "drupal/fullcalendar_view": "^5.1",
        "drupal/honeypot": "^2.0",
        "drupal/jquery_ui_accordion": "^1.1",
        "drupal/layout_builder_modal": "^1.1",
        "drupal/layout_builder_restrictions": "^2.7",
        "drupal/libraries": "^3.0@alpha",
        "drupal/link_class": "^2.0",
        "drupal/migrate_plus": "^5.1",
        "drupal/migrate_tools": "^5.0",
        "drupal/nagios": "^1.15",
        "drupal/panelbutton": "^1.3",
        "drupal/paragraphs": "^1.12",
        "drupal/paragraphs_jquery_ui_accordion": "^1.5",
        "drupal/pathauto": "^1.8",
        "drupal/permissions_by_term": "^3.1",
        "drupal/quick_node_clone": "^1.13",
        "drupal/redirect": "^1.6",
        "drupal/slick": "^2.2",
        "drupal/slick_example": "^1.0@RC",
        "drupal/slick_extras": "^1.0@RC",
        "drupal/slick_ui": "^2.2",
        "drupal/slick_views": "^2.3",
        "drupal/smart_date": "^3.6",
        "drupal/smtp": "^1.0",
        "drupal/super_login": "^2.0",
        "drupal/theme_switcher": "^1.1",
        "drupal/token": "^1.7",
        "drupal/twig_tweak": "^2.9",
        "drupal/upgrade_status": "^3.11",
        "drupal/views_aggregator": "^2.0",
        "drupal/views_conditional": "^1.4",
        "drupal/views_ical": "^1.0@alpha",
        "drupal/viewsreference": "^2.0@beta",
        "drupal/webform": "^6.1",
        "drush/drush": "^10.6",
        "pear/pear_exception": "1.0.2 as 1.0.1",
        "phpoffice/phpword": "0.18.0 as 0.15.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": true
    },
    "scripts": {
       "post-drupal-scaffold-cmd": [
            "patch -p0 < htaccess.patch"
       ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "civicrm-asset": {
           "path": "web/libraries/civicrm",
           "url": "/libraries/civicrm",
           "assets:packages": {
             "+include": ["kcfinder/**"]
           },
           "assets:core": {
             "+include": ["extern/**"]
           }
        },
        "patches": {
            "civicrm/civicrm-core": {
                "Apply patch to swap sharing from linkedIn to Instagram": "./patches/civicrm-core-share-instagram.patch"
            },
            "drupal/fullcalendar_view": {
                "Apply patch to fix all day calendar events display": "./patches/full_calendar_view_all_day_patch.patch"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "enable-patching": "true",
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"],
        "compile-mode": "all"
    },
    "require-dev": {
        "zaporylie/composer-drupal-optimizations": "^1.1"
    }
}
